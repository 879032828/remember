<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_circular_dialog"
    tools:context=".Activity_AddRecord" 
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_input_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp" 
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/dialog_input_edittext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_bg_edittext_normal"
            android:ems="10"
            android:hint="最多支持4个字"
            android:maxLength="4"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/regist_edittext_padding_left"
            android:textColorHint="@color/gray_frame" >

            <requestFocus />
        </EditText>

        <RelativeLayout
            android:id="@+id/dialog_input_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal" 
            android:padding="10dp">

            <Button
                android:id="@+id/dialog_input_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:text="确定"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <Button
                android:id="@+id/dialog_input_cannle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/dialog_input_sure"
                android:layout_alignBottom="@+id/dialog_input_sure"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@+id/dialog_input_sure"
                android:background="@color/white"
                android:text="取消"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>